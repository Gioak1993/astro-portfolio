---
const { href, src, title, description, alt} = Astro.props
import { Image } from "astro:assets"
---

<a href={href} class=" flex flex-col items-center bg-stone-50 border border-gray-200 rounded-lg shadow my-6 md:mx-3 md:flex-row md:max-w-xl hover:bg-gray-100 dark:bg-stone-950 dark:hover:bg-gray-700">
    <Image loading="lazy" class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src={src} alt={alt}/>
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h3 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</h3>
        <p class="h-20 mb-3 font-normal text-gray-700 dark:text-gray-400 overflow-y-auto">{description}</p>
    </div>
</a>

